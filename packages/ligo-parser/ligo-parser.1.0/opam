build        : [
                [ "sh" "-c" "printf 'let version = \"%s\"' \"$(git describe --always --dirty --abbrev=0)\" > Version.ml" ]
                [ "dune" "build" "-p" name "-j" jobs ]
  [ "mv" "src/ligo/ligo-parser/ligo-parser.install" "." ]
               ]

